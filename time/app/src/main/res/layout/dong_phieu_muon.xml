<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imageviewsach"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/iconsach"
        ></ImageView>
    <TextView
        android:id="@+id/texviewtensach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sach"

        android:textSize="30sp"
        android:layout_toRightOf="@id/imageviewsach">

    </TextView>
    <TextView
        android:id="@+id/textviewngay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/texviewtensach"
        android:text="12345"
        android:layout_toRightOf="@id/imageviewsach"
        android:textSize="25sp"></TextView>
    <TextView
        android:id="@+id/textviewdocgia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textviewngay"
        android:layout_below="@id/texviewtensach"
        android:textSize="25sp"
        ></TextView>


</RelativeLayout>